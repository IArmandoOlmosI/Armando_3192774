<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Usuarios</title>

    <!-- Material Icons -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

    <!-- Materialize CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">

    <!-- Enlace al CSS externo -->
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <div class="container">
        <h3 class="center-align" style="color: white;">Lista de Usuarios</h3>
        
        <div class="row">
            <div class="col s12">
                <table class="responsive-table bordered striped centered">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Nombre</th>
                            <th>Apellido Paterno</th>
                            <th>Apellido Materno</th>
                            <th>Edad</th>
                            <th>Estado Civil</th>
                            <th>Apodo</th>
                            <th>Teléfono</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>

                    <tbody>
                        <% results.forEach((usuarios) => { %>
                        <tr>
                            <td><%= usuarios.id %></td>
                            <td><%= usuarios.nombre %></td>
                            <td><%= usuarios.ap_paterno %></td>
                            <td><%= usuarios.ap_materno %></td>
                            <td><%= usuarios.edad %></td>
                            <td><%= usuarios.estado_civil %></td>
                            <td><%= usuarios.apodo %></td>
                            <td><%= usuarios.telefono %></td>
                            <td>
                                <!-- Editar Button -->
                                <a href="/editar/<%= usuarios.id %>" class="btn-floating btn-small waves-effect waves-light blue" 
                                    title="Editar">
                                    <i class="material-icons">edit</i>
                                </a>
                                
                                <!-- Eliminar Button -->
                                <a href="/eliminar/<%= usuarios.id %>" onclick="return confirm('¿Estás seguro de eliminar este registro?')" class="btn-floating btn-small waves-effect waves-light red" 
                                    title="Eliminar">
                                    <i class="material-icons">delete</i>
                                </a>
                            </td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Agregar Button -->
        <div class="fixed-action-btn">
            <a href="/agregar" class="btn-floating btn-large waves-effect waves-light green" title="Agregar Usuario">
                <i class="material-icons">add</i>
            </a>
        </div>
    </div>

    <!-- Materialize JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
</body>

</html>
